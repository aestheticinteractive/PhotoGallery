@model DataPage<WebAlbum>

<table>
	<thead>
		<th style="width: 25%;">Album</th>
		<th style="width: 45%;"></th>
		<th>Dates</th>
		<th class="hide-for-tiny" style="width: 9%;">Photos</th>
	</thead>
	<tbody>
		@foreach ( WebAlbum a in Model.Items ) {
			string url = Url.Content("~"+a.FirstPhoto.ImageUrl);
			
			<tr>
				<td style="padding: 0 4px 0 0;">
					<div class="thumb allAlbum">
						<div class="image" style="background-image: url(@url);">
							@Html.ActionLink(" ", MVC.Main.Albums.Photos(a.AlbumId))
						</div>
					</div>
				</td>
				<td>
					<span style="font-size: 1.2em;">
						@Html.ActionLink(a.Title, MVC.Main.Albums.Photos(a.AlbumId))
					</span><br/>
					by @a.UserName
				</td>
				<td>
					@a.DateRangeString
				</td>
				<td class="hide-for-tiny">
					@a.NumPhotos
				</td>
			</tr>
		}
	</tbody>
</table>