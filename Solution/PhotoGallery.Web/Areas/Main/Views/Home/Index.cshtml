@model HomeModel

<div class="row">
	<div class="six columns">
		<h4>
			Albums
		</h4>
		@foreach ( WebAlbum a in Model.Albums ) {
			<!--div class="thumbCropLarge">
				<a class="thumbLink" href="#" title="@a.Title" >
					<img src="@a.FirstPhoto.ImageUrl" class="thumb" alt="@a.Title" />
				</a>
			</div-->
			<div class="thumb" style="background-image: url(@a.FirstPhoto.ImageUrl); width:100%; height:100px;">
				<div style="background-color: rgba(0,0,0,0.2); width: 100%; height: 100%;">
					<p style="color: #fff; font-size: 24px; padding: 10px;">
						@a.Title<br />
						<span style="background-color: rgba(0,0,0,0.5); font-size: 12px; padding: 3px; margin-right: 2px;">
							@a.DateRangeString
						</span>
						<span style="background-color: rgba(0,0,0,0.5); font-size: 12px; padding: 3px; margin-right: 2px;">
							@a.NumPhotos photo@(a.NumPhotos==1?"":"s")
						</span>
						<span style="background-color: rgba(0,0,0,0.5); font-size: 12px; padding: 3px;">
							@((int)Math.Round((a.NumFavs/(float)a.NumPhotos)*100))% favorites
						</span>
					</p>
					<p>
						
					</p>
				</div>
			</div>
		}
	</div>
</div>