@model HomeModel

<div class="row">
	<div class="six columns">
		<h4 class="borderBot">
			@Model.User.Name
		</h4>
		<p>
			You joined the gallery on @Model.User.Created.
		</p>
		<p>
			View your <a href="http://inthefabric.com/explore/users/@Model.User.ArtifactId"
				target="_blank">Fabric profile</a>.
		</p>
		<p>
			View your @Html.ActionLink("photo albums", MVC.Account.Albums.Index()).
		</p>
		<p>
			@Html.ActionLink("Logout", MVC.Header.PersonLogout())
		</p>
	</div>
</div>