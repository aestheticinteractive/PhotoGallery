<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=false;" />
	<title>@ViewBag.Title</title>
	<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
	@Styles.Render("~/Content/foundation/css")
	@Styles.Render("~/Content/css")
	@RenderSection("head", required: false)
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	
	@RenderBody()
	
	<script type="text/javascript">
		document.write(
			'<script src='+
				'@Url.Content("~/Scripts/jquery.js")'+
			'><\/script>'
		);
    </script>

	@*Scripts.Render("~/bundles/foundation")*@
	<script src="@Url.Content("~/Scripts/foundation/foundation.js")"></script>
	<script src="@Url.Content("~/Scripts/foundation/foundation.section.js")"></script>
	<script src="@Url.Content("~/Scripts/foundation/foundation.topbar.js")"></script>
	@RenderSection("scripts", required: false)

	<script type="text/javascript">
		$(function () {
			$(document).foundation();
		});
	</script>

</body>
</html>
