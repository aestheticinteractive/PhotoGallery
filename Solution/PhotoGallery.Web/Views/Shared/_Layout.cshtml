@model BaseModel
@{
	Layout = "~/Views/Shared/_Base.cshtml";
	ViewBag.Title = Model.HtmlTitle;
}

<div id="Site">
	
	<header id="Header">
		@{ Html.RenderAction("Full", "Header", new { area="" }); }
	</header>

	<section id="Page">
		@RenderBody()
	</section>
	
	<footer id="Footer" class="row">
		<div class="large-12 columns">
			<p>
				This site is powered by <a href="http://www.inTheFabric.com">Fabric</a>.
			</p>
		</div>
	</footer>

</div>

@section head {
	<link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700italic,400italic,700'
	      rel='stylesheet' type='text/css'>
}

<script src="http://d3js.org/d3.v3.js" charset="utf-8"></script>
<script src="@Url.Content("~/Scripts/gallery/gallery.js")"></script>
@RenderSection("scripts", required: false)

<script type="text/javascript">

	var _gaq = _gaq || [];
	_gaq.push(['_setAccount', 'UA-1594248-5']);
	_gaq.push(['_trackPageview']);

	(function() {
		var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
		ga.src = ('https:' == document.location.protocol ?
			'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	})();

</script>